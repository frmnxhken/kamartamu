---
import Search from "./Search.astro"
const images = "https://images.unsplash.com/photo-1455587734955-081b22074882?q=80&w=1920&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
---
<div class="container max-w-[1200px] mx-auto relative pb-12">
    <div class="relative z-[-10]">
        <img class="rounded-0 sm:rounded-lg w-full h-[60vh] sm:h-[70vh] aspect-video object-cover" src={images} alt="banner"/>
        <div class="absolute top-0 text-center w-full bg-black/30 h-full rounded-0 sm:rounded-lg">
            <div class="flex justify-center items-center w-full h-full">
                <h1 class="uppercase text-4xl sm:text-5xl text-white font-bold mb-4">Find Your Great Reservation</h1>
            </div>
        </div>
    </div>
    <Search/>
</div>