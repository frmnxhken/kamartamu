---
import { sliceStr } from "../utils/String";
const {title, image, address, price, slug} = Astro.props;
---
<div onclick={`window.location.href='/villa/${slug}'`} class="border border-slate-300 rounded-lg">
    <img class="rounded-t-lg w-full max-h-[300px] aspect-4/3 object-cover" src={image} alt="thumbnail">
    <div class="px-2 sm:px-4 py-2 sm:py-6 flex flex-col">
        <h2 class="text-sm sm:text-md font-bold">{title}</h2>
        <p class="text-xs sm:text-sm text-slate-600">{sliceStr(address)}</p>
        <h3 class="text-md font-bold mt-4">{price}</h3>
    </div>
</div>